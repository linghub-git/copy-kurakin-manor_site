{% extends "base.html.j2" %}
{% block title %}Форма обратной связи{% endblock %}
{% block div %}
<ul class="navbar-nav">
  <li class="nav-item active"><a href="/about" class="nav-link active">Главная</a></li>
  <li class="nav-item active"><a href="/workshop" class="nav-link">Мастерская проекта</a></li>
  <li class="nav-item active"><a href="" class="nav-link">Виртуальный тур</a></li>
</ul>
{% endblock %}   
{% block main %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/styles.css')}}">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

<div class="main_container">
        <img src="static/images/007_2_1.png" alt="Splash_screen" style="width:100%;">
        <div class="main_title">Ваш отзыв о проекте</div>
    </div>
  <section class="form">
  <div class="container_form" style="padding-top: 50px">
  <form method="POST">
    <div class="form-group"> 
      <label for="name">Как Вас зовут?</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Имя">
    </div>
    <div class="form-group">
      <label for="email">Укажите Ваш Email</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
    </div>
    <div class="form-group">
      <label for="mobile">Укажите Ваш контактный номер</label>
      <input type="text" class="form-control" id="mobile" name="mobile" placeholder="+7-000-000-00-00">
    </div>
    <div class="form-group">
      <label for="age">Сколько Вам лет?</label>
      <select class="form-control" id="age" name="age">
        <option>12-16</option>
        <option>17-25</option>
        <option>26-40</option>
        <option>41-55</option>
        <option>56 и выше</option>
      </select>
    </div>
       <div class="form-group">
      <label for="occupation">Выберете Ваш род деятельности</label>
      <select class="form-control" id="occupation" name="occupation">
        <option>Школьник</option>
        <option>Студент</option>
        <option>Наемный работник</option>
        <option>Фрилансер</option>
        <option>Безработный</option>
        <option>Пенсионер</option>
      </select>
    </div>
    <div class="form-group">
      <label for="major">Ваша специализация (учебная или профессиональная), если есть</label>
      <textarea class="form-control" id="major" name="major" rows="3"></textarea>
    </div>
    <div class="form-group">
    <label for="pros">Что, на ваш взгляд, лучше всего реализовано в нашем проекте?</label>
    <div class="form-check">
    <input class="form-check-input" type="checkbox" value="virtual_tour" id="pros" name="pros">
    <label class="form-check-label" for="defaultCheck1">
      Виртуальный тур
    </label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="Plot" id="defaultCheck2">
    <label class="form-check-label" for="defaultCheck2">
      Сюжетная линия
    </label>
    </div>
    <div class="form-check">
    <input class="form-check-input" type="checkbox" value="DH" id="defaultCheck2">
    <label class="form-check-label" for="defaultCheck2">
      DH-проекты
    </label>
    </div>
    <div class="form-check">
    <input class="form-check-input" type="checkbox" value="Site" id="defaultCheck2">
    <label class="form-check-label" for="defaultCheck2">
      Сайт
    </label>
    </div>
    </div>
        <div class="form-group">
      <label for="cons">Напишите, что Вам не понравилось в нашем проекте?</label>
      <textarea class="form-control" id="cons" name="cons" rows="3"></textarea>
    </div>
        <div class="form-group">
      <label for="suggestions">Напишите, как бы Вы улучшили наш проект?</label>
      <textarea class="form-control" id="suggestions" name="suggestions" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top: 10px; background-color:#005AAB; color: rgb(255, 255, 255, 0.55);">Отправить отзыв</button>
  </form>

  {{ result }}
  <ul>
      {% for item in result._items %}
      <li>
      {{ item.name }}
      {{ item.email }}
      {{ item.mobile }}
      {{ item.age }}
      {{ item.occupation }}
      {{ item.major }}
      {{ item.pros }}
      {{ item.cons }}
      {{ item.suggestions }}
      </li>
      {% endfor %}
  </ul>
</div>

  </section>
{% endblock %}